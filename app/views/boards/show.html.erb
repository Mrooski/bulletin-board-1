<div>
  <div>
    <h1>
      <%= @the_board.name %>
    </h1>

    <hr>

    <h2>Add a new post</h2>

    <form action="/insert_post" method="post">
      <div>
        <label for="title_box">Title</label>
        <input type="text" id="title_box" name="query_title">
      </div>
      <div>
        <label for="body_box">Body</label>
        <textarea type="text" id="body_box" name="query_body" rows="3"></textarea>
      </div>
      <div>
        <label for="expires_on_box">Expires on</label>
        <input type="date" name="query_expires_on" id="expires_on_box">
      </div>
      <input type="hidden" id="board_id_box" name="query_board_id" value=<%= @the_board.id %>>
      <button>Add posts</button>
    </form>
  </div>
</div>

<hr>


<h2>Active posts</h2>

<table border="1">
  <tbody>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Posted on</th>
      <th>Expires on</th>
    </tr>
    <% @the_board.posts.each do |post|%>
      <% if post.expires_on < Time.now %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.body %></td>
          <td><%= post.created_at %></td>
          <td><%= post.expires_on %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<h2>Expired posts</h2>

<table border="1">
  <tbody>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Posted on</th>
      <th>Expires on</th>
    </tr>
    <% @the_board.posts.each do |post|%>
      <% if post.expires_on > Time.now %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.body %></td>
          <td><%= post.created_at %></td>
          <td><%= post.expires_on %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
<%#= @the_board.posts.each do %>
